#!/usr/bin/env python3
"""
VANET with WiFi Signal Strength Monitoring
Shows RSSI (dBm) as cars move between networks
"""

import os
import sys
from mininet.log import setLogLevel, info
from mn_wifi.cli import CLI
from mn_wifi.net import Mininet_wifi
from mn_wifi.sumo.runner import sumo
from mn_wifi.link import wmediumd, ITSLink
from mn_wifi.wmediumdConnector import interference

# Add SUMO tools to path
if 'SUMO_HOME' in os.environ:
    sys.path.append(os.path.join(os.environ['SUMO_HOME'], 'tools'))
else:
    sys.exit("Please set SUMO_HOME environment variable")


def monitor_signal_strength(net):
    """Monitor and display WiFi signal strength for all cars"""
    
    info("\n*** WiFi Signal Strength Monitoring Started ***\n")
    info("Format: car_id → AP_id : RSSI (dBm)\n")
    info("Strong: > -70 dBm | Medium: -70 to -85 dBm | Weak: < -85 dBm\n")
    info("-" * 60 + "\n")
    
    # Monitor for 60 seconds
    for step in range(60):
        print(f"\n=== Time: {step} seconds ===")
        
        for car in net.cars:
            # Get all connected access points for this car
            connected_aps = []
            
            try:
                # Check WiFi connections
                for ap in net.aps:
                    # Get signal strength between car and AP
                    rssi = net.wmediumd_connector.get_rssi(car, ap)
                    
                    if rssi is not None and rssi != 0:
                        # Convert to dBm if needed
                        signal_dbm = float(rssi)
                        
                        # Determine signal quality
                        if signal_dbm > -70:
                            quality = "STRONG"
                        elif signal_dbm > -85:
                            quality = "MEDIUM"
                        else:
                            quality = "WEAK"
                        
                        connected_aps.append({
                            'ap': ap.name,
                            'rssi': signal_dbm,
                            'quality': quality
                        })
                
                # Sort by signal strength (strongest first)
                connected_aps.sort(key=lambda x: x['rssi'], reverse=True)
                
                # Display results
                if connected_aps:
                    print(f"{car.name}:")
                    for ap_info in connected_aps:
                        print(f"  → {ap_info['ap']:6s}: {ap_info['rssi']:7.2f} dBm  [{ap_info['quality']}]")
                else:
                    print(f"{car.name}: No signal")
                    
            except Exception as e:
                print(f"{car.name}: Error reading signal - {e}")
        
        # Wait 1 second before next reading
        import time
        time.sleep(1)


def topology():
    """Create VANET topology with signal strength monitoring"""
    
    net = Mininet_wifi(link=wmediumd, wmediumd_mode=interference)

    info("*** Creating 10 vehicles\n")
    for id in range(0, 10):
        net.addCar('car%s' % (id+1), wlans=2, encrypt=['wpa2', ''])

    kwargs = {'ssid': 'vanet-ssid', 'mode': 'g', 'passwd': '123456789a',
              'encrypt': 'wpa2', 'failMode': 'standalone', 'datapath': 'user'}
    
    info("*** Creating 6 Access Points\n")
    e1 = net.addAccessPoint('e1', mac='00:00:00:11:00:01', channel='1',
                            position='2600,3500,0', **kwargs)
    e2 = net.addAccessPoint('e2', mac='00:00:00:11:00:02', channel='6',
                            position='2800,3500,0', **kwargs)
    e3 = net.addAccessPoint('e3', mac='00:00:00:11:00:03', channel='11',
                            position='3000,3500,0', **kwargs)
    e4 = net.addAccessPoint('e4', mac='00:00:00:11:00:04', channel='1',
                            position='2600,3300,0', **kwargs)
    e5 = net.addAccessPoint('e5', mac='00:00:00:11:00:05', channel='6',
                            position='2800,3300,0', **kwargs)
    e6 = net.addAccessPoint('e6', mac='00:00:00:11:00:06', channel='11',
                            position='3000,3300,0', **kwargs)

    info("*** Configuring Propagation Model (logDistance, exp=2.8)\n")
    net.setPropagationModel(model="logDistance", exp=2.8)

    info("*** Configuring nodes\n")
    net.configureNodes()

    # Connect APs (backbone)
    net.addLink(e1, e2)
    net.addLink(e2, e3)
    net.addLink(e3, e4)
    net.addLink(e4, e5)
    net.addLink(e5, e6)
    
    # Add V2V links
    for car in net.cars:
        net.addLink(car, intf=car.wintfs[1].name,
                    cls=ITSLink, band=20, channel=181)

    # Connect to SUMO
    net.useExternalProgram(program=sumo, port=8813,
                           extra_params=["--start --delay 1000"],
                           clients=1, exec_order=0)

    info("*** Starting network\n")
    net.build()

    for enb in net.aps:
        enb.start([])

    for id, car in enumerate(net.cars):
        car.setIP('192.168.0.{}/24'.format(id+1),
                  intf='{}'.format(car.wintfs[0].name))
        car.setIP('192.168.1.{}/24'.format(id+1),
                  intf='{}'.format(car.wintfs[1].name))

    # Enable telemetry
    nodes = net.cars + net.aps
    net.telemetry(nodes=nodes, data_type='position',
                  min_x=2200, min_y=2800,
                  max_x=3200, max_y=3900)

    info("*** Running CLI\n")
    info("\nTip: In another terminal, run:\n")
    info("  python3 signal_monitor.py\n")
    info("to continuously monitor signal strength!\n\n")
    
    CLI(net)

    info("*** Stopping network\n")
    net.stop()


if __name__ == '__main__':
    setLogLevel('info')
    topology()