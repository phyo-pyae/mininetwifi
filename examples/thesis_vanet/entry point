#!/usr/bin/env python3
"""
Main entry point - runs SUMO + Mininet-wifi
"""

import os
import sys

# Set environment
os.environ['SUMO_HOME'] = '/usr/share/sumo'

# Add paths
sys.path.insert(0, os.path.join(os.path.dirname(__file__), 'mininet_wifi'))

from mininet_wifi.vanet_network import create_vanet_topology

if __name__ == '__main__':
    print("=" * 70)
    print("VANET Simulation: Mobile Vehicles + 4 Networks")
    print("=" * 70)
    print("\nConfiguration:")
    print("  - Vehicles: 20 (moving via SUMO)")
    print("  - Networks: 4 (A, B, C, D)")
    print("  - RSUs: 2 per network (8 total)")
    print("  - V2V Communication: Enabled on channel 181")
    print("  - Infrastructure: Backbone network connecting all RSUs")
    print("\n" + "=" * 70 + "\n")
    
    create_vanet_topology()